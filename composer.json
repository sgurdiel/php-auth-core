{
    "name": "xver/php-auth-core",
    "type": "symfony-bundle",
    "description": "Provides Authentication",
    "license": "AGPL-3.0-or-later",
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Xver\\SymfonyAuthBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Xver\\SymfonyAuthBundle\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.4",
        "symfony/form": "^8.0",
        "symfony/security-bundle": "^8.0",
        "symfony/translation": "^8.0",
        "symfony/uid": "^8.0",
        "symfony/validator": "^8.0",
        "xver/php-app-core": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.1",
        "symfony/console": "^8.0",
        "symfony/flex": "^2.5",
        "symfony/framework-bundle": "^8.0",
        "symfony/http-kernel": "^8.0",
        "symfony/runtime": "^8.0",
        "symfony/yaml": "^8.0",
        "vimeo/psalm": "^6.10"
    },
    "repositories":[
        {
            "type": "vcs",
            "url": "https://github.com/sgurdiel/php-app-core.git"
        }
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    }
}
